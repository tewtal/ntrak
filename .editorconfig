# NTRAK EditorConfig
# https://editorconfig.org

root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space
indent_size = 4

[*.{hpp,cpp,h,c}]
indent_size = 4
max_line_length = 120

[CMakeLists.txt]
indent_size = 4

[*.cmake]
indent_size = 4

[*.{md,markdown}]
trim_trailing_whitespace = false

[*.{json,yml,yaml}]
indent_size = 2

[*.ini]
indent_size = 4